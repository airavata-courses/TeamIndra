<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />

	<context:component-scan base-package="edu.iu.indra.scigw.." />

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>config.properties</value>
				<value>file:./conf/override_config.properties</value>
			</list>
		</property>
	</bean>

	<!-- Configuration for user authentication -->
	<bean id="userConfig" class="edu.iu.indra.scigw.input.UserInput">
		<property name="username" value="${host.username}" />
		<property name="host" value="${host.url}" />
		<property name="passphrase" value="${sshkey.passphrase}" />
		<property name="pathToSSHKey" value="${sshkey.key_path}" />
	</bean>

	<!-- Configuration for scheduling the job -->
	<bean id="jobConfig" class="edu.iu.indra.scigw.config.JobConfig">
		<property name="jobName" value="${job.name}" />
		<property name="nodes" value="${job.nodes}" />
		<property name="maxMemory" value="${job.maxMemory}" />
		<property name="wallTime" value="${job.wallTime}" />
		<property name="cores" value="${job.cores}" />
		<property name="email" value="${job.email}" />
	</bean>

	<bean id="applicationHandler" class="edu.iu.indra.scigw.applications.ApplicationHandler"
		abstract="true">
		<property name="jobConfig" ref="jobConfig" />
		<property name="constants" ref="constants" />
		<property name="connectionHandler" ref="connectionHandler" />
		<property name="fileHandler" ref="fileHandler" />
	</bean>

	<bean id="sortHandler"
		class="edu.iu.indra.scigw.applications.SortingApplicationHandler"
		parent="applicationHandler">
	</bean>


	<bean id="constants" class="edu.iu.indra.scigw.util.Constants">
		<property name="userConfig" ref="userConfig"></property>
	</bean>

	<bean id="mpiHandler"
		class="edu.iu.indra.scigw.applications.MpiHelloApplicationHandler"
		parent="applicationHandler">
	</bean>

	<bean id="connectionHandler"
		class="edu.iu.indra.scigw.connectionhandler.ConnectionHandlerImpl">
		<property name="userInput" ref="userConfig"></property>
	</bean>

	<bean id="fileHandler" class="edu.iu.indra.scigw.filehandler.SftpFileHandlerImpl">
		<property name="connectionHandler" ref="connectionHandler"></property>
		<property name="constants">
			<ref local="constants" />
		</property>
	</bean>

	<bean id="applicationHandlerFactory"
		class="edu.iu.indra.scigw.applications.SimpleApplicationHandlerFactory">
		<property name="mpiHandler" ref="mpiHandler"></property>
		<property name="sortHandler" ref="sortHandler"></property>
	</bean>

	<bean id="applicationManager" class="edu.iu.indra.scigw.applications.ApplicationManager">
		<property name="applicationHandlerFactory" ref="applicationHandlerFactory"></property>
	</bean>

	<bean id="jobMonitor" class="edu.iu.indra.scigw.applications.JobMonitor">
		<property name="connectionHandlerImpl" ref="connectionHandler"></property>
		<property name="userConfig" ref="userConfig"></property>
	</bean>

	<bean id="errorMessages" class="edu.iu.indra.scigw.errorcodes.ErrorMessages">
		<property name="messageSource" ref="messageSource"></property>
	</bean>

</beans> 